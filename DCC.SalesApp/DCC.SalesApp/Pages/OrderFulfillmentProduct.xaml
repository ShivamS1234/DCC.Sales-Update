                                            <OnPlatform x:TypeArguments="Color">
                                                <OnPlatform.Android>#000000</OnPlatform.Android>
                                                <OnPlatform.iOS>#757575</OnPlatform.iOS>
                                                <OnPlatform.WinPhone>#4C4C4C</OnPlatform.WinPhone>
                                            </OnPlatform>
                                        </Label.TextColor>
