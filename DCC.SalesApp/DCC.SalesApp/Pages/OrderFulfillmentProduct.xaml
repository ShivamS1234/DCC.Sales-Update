                                                    <OnPlatform.Android>0,16,0,0</OnPlatform.Android>
                                                    <OnPlatform.iOS>0,12,0,0</OnPlatform.iOS>
                                                    <OnPlatform.WinPhone>0,12,0,0</OnPlatform.WinPhone>
                                                </OnPlatform>
                                            </Label.Margin>
