                                                <OnPlatform.Android>#009688</OnPlatform.Android>
                                                <OnPlatform.iOS>#FFFFFF</OnPlatform.iOS>
                                                <OnPlatform.WinPhone>#C9C9C9</OnPlatform.WinPhone>
                                            </OnPlatform>
