                                    <Grid.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <OnPlatform.Android>16,0,0,0</OnPlatform.Android>
                                            <OnPlatform.iOS>12,0,0,0</OnPlatform.iOS>
                                            <OnPlatform.WinPhone>12,0,0,0</OnPlatform.WinPhone>
                                        </OnPlatform>
                                    </Grid.Margin>
